							"});\r",
							"const bookingId = pm.response.json().bookingid;\r",
							"\r",
							"console.log(bookingId)\r",
							"\r",
							"pm.test(\"Verify the new booking ID is present in the response\", async function () {\r",
							"    const response2 =  await pm.sendRequest({\r",
							"        url: \"https://restful-booker.herokuapp.com/booking\",\r",
							"        method: \"GET\"\r",
							"    });\r",
							"    const jsonData = await response2.json()\r",
							"      console.log(response2.json());\r",
							"     const bookingIds = await jsonData.map(b => b.bookingid);\r",
							"     await pm.expect(bookingIds).to.include(parseInt(bookingId));\r",
							" });\r",
							"\r",
							"\r",
